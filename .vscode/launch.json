{
  "configurations": [
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "Get Bounding Box",
      "preLaunchTask": "Build",
      "invokeTarget": {
        "target": "code",
        "architecture": "arm64",
        "projectRoot": "dist",
        "lambdaHandler": "api/get-bounding-box.handler"
      },
      "lambda": {
        "runtime": "nodejs22.x",
        "payload": {
          "path": "${workspaceFolder}/test/payloads/api/get-bounding-box-event.json"
        }
      },
      "sam": {
        "localArguments": [
          "--container-env-vars",
          "${workspaceFolder}/local.env.json"
        ]
      }
    },
